{
  "manifest_version": 2,
  "name": "FocusGuard â€“ Site Blocker",
  "version": "1.0.0",
  "description": "Block distracting sites, set usage limits, track insights and stay focused.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "scripts": ["background/index.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/tracker.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "alarms",
    "tabs",
    "webNavigation",
    "notifications",
    "<all_urls>"
  ],
  "web_accessible_resources": ["src/pages/blocked/index.html", "assets/*"]
}
